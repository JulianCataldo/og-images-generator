{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ES2022",

    "lib": ["ES2022", "DOM"],

    "noEmit": true,

    "outDir": "types",

    "strict": true,

    "allowJs": true,
    "checkJs": true,
    "skipLibCheck": true,

    "moduleResolution": "Bundler",

    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,
    "noPropertyAccessFromIndexSignature": true
  },

  "include": ["./*.js"]
}
