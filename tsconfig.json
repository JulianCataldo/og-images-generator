{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ES2022",

    "lib": ["ES2022", "DOM"],

    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,

    "outDir": "types",

    "strict": true,

    "checkJs": true,
    "skipLibCheck": true,

    "moduleResolution": "Bundler",

    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,
    "noPropertyAccessFromIndexSignature": true

    // "rootDir": "."
  },

  "include": [
    //
    "./src/*.js",
    "./src/plugins/*.js",
    "test/**/*.js"
  ]
}
